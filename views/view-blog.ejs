<%- include('components/header') %>

  <head>
    <style>
      .container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
        font-family: Arial, sans-serif;
      }

      /* Post Header */
      .post-header {
        margin-bottom: 30px;
      }

      .btn {
        display: inline-block;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
        transition: 0.3s;
        margin-bottom: 20px;
        border: none;
        cursor: pointer;
        font-size: 1rem;
      }

      .btn-back {
        background-color: #95a5a6;
        color: #fff;
      }

      .btn-back:hover {
        background-color: #7f8c8d;
      }

      .btn-delete {
        background-color: #e74c3c;
        color: #fff;
        margin-left: 10px;
      }

      .btn-delete:hover {
        background-color: #c0392b;
      }

      .post-title {
        font-size: 2.5rem;
        margin: 20px 0 10px;
        line-height: 1.2;
      }

      .post-date {
        font-size: 1rem;
        color: #777;
        display: block;
        margin-bottom: 20px;
      }

      /* Post Image */
      .post-image {
        width: 100%;
        max-height: 500px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 30px;
      }

      /* Post Content */
      .post-content {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #333;
      }

      .post-content p {
        margin-bottom: 20px;
      }

      .post-content h2,
      .post-content h3 {
        margin-top: 30px;
        margin-bottom: 15px;
      }

      .post-content img {
        max-width: 100%;
        height: auto;
        border-radius: 4px;
      }

      /* Actions */
      .post-actions {
        display: flex;
        gap: 10px;
        margin-bottom: 20px;
      }

      /* Responsive */
      @media (max-width: 768px) {
        .post-title {
          font-size: 2rem;
        }

        .post-content {
          font-size: 1rem;
        }
      }
    </style>
  </head>

  <main class="container" style="padding-bottom: 120px;">
    <article class="blog-post">
      <!-- Post Header -->
      <header class="post-header">
        <div class="post-actions">
          <a href="/" class="btn btn-back">‚Üê Back to All Posts</a>
          <form action="/blog/<%= post._id %>?_method=DELETE" method="POST" style="display: inline;"
            onsubmit="return confirm('Are you sure you want to delete this post? This action cannot be undone.');">
            <button type="submit" class="btn btn-delete">Delete Post</button>
          </form>
        </div>

        <h1 class="post-title">
          <%= post.title %>
        </h1>
        <time class="post-date">
          <%= new Date(post.createdAt).toLocaleDateString() %>
        </time>
      </header>

      <!-- Post Cover Image -->
      <% if (post.coverImage) { %>
        <img src="<%= post.coverImage %>" alt="<%= post.title %>" class="post-image">
        <% } %>

          <!-- Post Content -->
          <div class="post-content">
            <%- post.content %>
          </div>
    </article>
  </main>

  <%- include('components/footer') %>