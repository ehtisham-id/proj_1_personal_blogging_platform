<%- include('components/header') %>

  <main class="container" style="padding-bottom: 120px;">
    <article class="blog-post">
      <!-- Post Header -->
      <header class="post-header">
        <a href="/" class="btn btn-back">‚Üê Back to All Posts</a>
        <h1 class="post-title">
          <%= post.title %>
        </h1>
        <time class="post-date">
          <%= new Date(post.createdAt).toLocaleDateString() %>
        </time>
      </header>

      <!-- Post Cover Image -->
      <% if (post.coverImage) { %>
        <img src="<%= post.coverImage %>" alt="<%= post.title %>" class="post-image">
        <% } %>

          <!-- Post Content -->
          <div class="post-content">
            <!-- If content contains HTML, use <%- %> -->
            <%- post.content %>
          </div>
    </article>
  </main>

  <%- include('components/footer') %>